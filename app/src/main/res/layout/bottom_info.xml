<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/header"
        android:background="@color/splashBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hint_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_1"
                android:gravity="start"
                android:text="@string/knld"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hint_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_3"
                android:gravity="start"
                android:text="@string/resp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hint_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_2"
                android:gravity="start"
                android:text="@string/soc"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hint_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_4"
                android:gravity="start"
                android:text="@string/activ"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hint_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_5"
                android:gravity="start"
                android:text="@string/innov"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hint_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/skill_item_6"
                android:gravity="start"
                android:text="@string/ent"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="@color/splashBg">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp"
            android:fastScrollEnabled="true"
            android:fillViewport="true"
            android:listSelector="@drawable/listview_selector" />
    </LinearLayout>

</RelativeLayout>