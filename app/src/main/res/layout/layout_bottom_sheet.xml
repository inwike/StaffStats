<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottom_sheet_heading"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:text="blabla"

        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_btn_add_photo_camera"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/white"
        android:gravity="start|center_vertical"
        android:text="asdasdasd"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_btn_add_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="@android:color/white"
        android:gravity="start|center_vertical"
        android:text="/bottom_sheet_option_gallery"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_btn_remove_photo"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/white"
        android:gravity="start|center_vertical"
        android:text="/bottom_sheet_option_remove_photo"
        android:textSize="16sp"
        android:layout_height="wrap_content" />

</LinearLayout>