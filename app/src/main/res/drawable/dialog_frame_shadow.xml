<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"> <!-- this shape is used as shadow -->
            <corners android:radius="15dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <solid android:color="#f0026eac" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"> <!-- this is for dialog frame -->
            <corners android:radius="15dp" />
            <gradient
                android:angle="90"
                android:centerColor="#c9e4f5"
                android:endColor="#d0E4f5"
                android:startColor="#d0E4f5"
                android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>